<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumno.claseuno.MainActivity">


    <TextView
        android:id="@+id/miTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="66dp"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btnUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miTxt"
        android:layout_marginStart="-368dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/miTxt"
        android:text="Agregar Texo" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUno"
        android:layout_alignEnd="@+id/btnUno"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="17dp"
        android:text="Button"
        tools:text="Borrar texto" />

    <EditText
        android:id="@+id/txtUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDos"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>
